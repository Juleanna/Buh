## Налаштування системи обліку основних засобів
## Скопіюйте цей файл як .env та заповніть значення

# Django
DJANGO_SECRET_KEY=django-insecure-змініть-це-на-випадковий-рядок
DEBUG=True

# PostgreSQL
POSTGRES_DB=buh_assets
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
# Для Docker: db, для локальної розробки: localhost
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# CORS (frontend)
# Для Docker: http://localhost,http://localhost:80
# Для локальної розробки: http://localhost:5173,http://127.0.0.1:5173
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Celery / Redis
# Для Docker: redis://redis:6379/0
# Для локальної розробки: redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Google Drive Backup (автобекап, необов'язково)
# Шлях до JSON ключа OAuth2 Google
GDRIVE_CREDENTIALS_PATH=gdrive_credentials.json
# ID папки на Google Drive для бекапів
GDRIVE_FOLDER_ID=
