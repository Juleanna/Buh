## Docker оточення — готові значення для запуску через docker-compose

# Django
DJANGO_SECRET_KEY=django-insecure-change-me-in-production-12345
DEBUG=False

# PostgreSQL (перевизначено в docker-compose.yml)
POSTGRES_DB=buh_assets
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# CORS (перевизначено в docker-compose.yml)
CORS_ORIGINS=http://localhost,http://localhost:80

# Celery / Redis (перевизначено в docker-compose.yml)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Google Drive Backup (необов'язково)
GDRIVE_CREDENTIALS_PATH=
GDRIVE_FOLDER_ID=
